<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2D9CA"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Container for Recipe Name with Border -->
        <LinearLayout
            android:id="@+id/recipeNameContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bg"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Title for Recipe Name -->
            <TextView
                android:id="@+id/textViewRecipeNameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recipe Name:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Recipe Name -->
            <TextView
                android:id="@+id/textViewRecipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Container for Recipe Description with Border -->
        <LinearLayout
            android:id="@+id/recipeDescriptionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bg"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <!-- Title for Recipe Description -->
            <TextView
                android:id="@+id/textViewRecipeDescriptionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recipe Description:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Recipe Description -->
            <TextView
                android:id="@+id/textViewRecipeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Horizontal LinearLayout for Edit and Delete Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- Edit Button -->
            <Button
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#6A4973"
                android:text="View" />

            <!-- Delete Button -->
            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#6A4973"
                android:text="Delete" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
